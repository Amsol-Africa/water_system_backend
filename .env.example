
# ============================================
# FILE 9: .env.example - Environment Template
# ============================================

# Django Settings
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=amsol_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Celery & Redis
CELERY_BROKER_URL=redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/1

# Stronpower API
STRONPOWER_BASE_URL=http://www.server-newv.stronpower.com/api
STRONPOWER_TIMEOUT=30
STRONPOWER_MAX_RETRIES=3

# M-Pesa
MPESA_WEBHOOK_SECRET=your-secret
MPESA_CALLBACK_URL=https://your-domain.com/api/webhooks/mpesa/callback/
MPESA_CONSUMER_KEY=your-key
MPESA_CONSUMER_SECRET=your-secret

# SMS (Twilio)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-sid
TWILIO_AUTH_TOKEN=your-token
TWILIO_PHONE_NUMBER=+1234567890

# Email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@amsol.africa

# Logging
LOG_LEVEL=INFO

